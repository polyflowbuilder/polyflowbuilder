{
  "name": "polyflowbuilder",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test:chromium": "playwright test --project=chromium",
    "test:chrome": "playwright test --project=chrome",
    "test:edge": "playwright test --project=edge",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:fast": "npm run test:chromium",
    "test:full": "playwright test",
    "test:full:seq": "npm run test:chromium && npm run test:chrome && npm run test:edge && npm run test:firefox && npm run test:webkit",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@playwright/test": "^1.28.1",
    "@simonwep/pickr": "^1.8.2",
    "@sveltejs/adapter-node": "^1.1.0",
    "@sveltejs/kit": "^1.0.0",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/svelte": "^4.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/ejs": "^3.1.2",
    "@types/jsdom": "^21.1.0",
    "@types/object-hash": "^3.0.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^0.34.1",
    "autoprefixer": "^10.4.7",
    "csv-parse": "^5.3.5",
    "daisyui": "^3.1.6",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.31.1",
    "husky": "^8.0.0",
    "jsdom": "^22.0.0",
    "mysql2": "^3.2.0",
    "postcss": "^8.4.14",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "prisma": "^5.0.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.0.0",
    "svelte-dnd-action": "^0.9.22",
    "svelte-fa": "^3.0.3",
    "svelte-preprocess": "^5.0.0",
    "tailwindcss": "^3.1.5",
    "tslib": "^2.4.1",
    "tw-elements": "^1.0.0-beta2",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vitest": "^0.34.1"
  },
  "type": "module",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "argon2": "^0.31.0",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "object-hash": "^3.0.0",
    "puppeteer": "^21.0.2",
    "tippy.js": "^6.3.7",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "zod": "^3.20.2"
  }
}
