{
  "compilerOptions": {
    "paths": {
      "$lib": ["../../src/lib"],
      "$lib/*": ["../../src/lib/*"]
    },
    "baseUrl": "./",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext"
  }
}
